<div class="container">
    <div class="row">
        <div class="col-12 mx-auto">
            <h1 class="py-2">Editing Book</h1>
            
            <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
            <label>Title</label><br/>
            <%= f.text_field :title, size: "60" %><br/>
            
            <label>Opinion</label><br/>
            <%= f.text_area :opinion, size: "63" %>
            
            <div class="py-2">
                <%= f.submit 'Update Book', class: 'btn btn-success' %>
            </div>
            <% end %>
        </div>
    </div>
</div>