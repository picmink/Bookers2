<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/886717443f.js" crossorigin="anonymous"></script>
  </head>
<header class="shadow-sm">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand p-3" href="/">Bookers</a>
      <button class="navbar-toggler"  type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
    <% if user_signed_in? %>
    <ul class="navbar-nav ml-auto">
      <li>
        <%= link_to user_path(current_user),class: "nav-link text-light" do %>
        <i class="fa-solid fa-house"></i> Home
        <% end %>
      </li>
      <li>
        <%= link_to users_path,class: "nav-link text-light" do %>
        <i class="fa-solid fa-users"></i> Users
        <% end %>
      </li>
      <li>
        <%= link_to books_path,class: "nav-link text-light" do %>
        <i class="fa-solid fa-book"></i> Books
        <% end %>
      </li>
      <li>
        <%= link_to destroy_user_session_path ,method: :delete,class: "nav-link text-light" do %>
       <i class="fa-solid fa-right-from-bracket"></i> Log_out
        <% end %>
      </li>
    </ul>
    <% else %>
     <ul class="navbar-nav ml-auto">
      <li>
        <%= link_to root_path,class: "nav-link text-light" do %>
        <i class="fa-solid fa-house"></i> Home
        <% end %>
      </li>
       <li>
        <%= link_to about_path,class: "nav-link text-light" do %>
        <i class="fa-solid fa-link"></i> About
        <% end %>
      </li>
      <li>
        <%= link_to new_user_registration_path,class: "nav-link text-light" do %>
        <i class="fa-solid fa-user-plus"></i> Sign_up
        <% end %>
      </li>
      <li>
        <%= link_to new_user_session_path,class: "nav-link text-light" do %>
        <i class="fa-solid fa-right-to-bracket"></i> Log in
        <% end %>
      </li>
     </ul>
    <% end %>
    </div>
    
    </div>
  </nav>
</header>
  <body>
    <%= yield %>
  </body>
  
<footer>
  <div class="container">
    <div class="row">
      <div class="mx-auto py-5">
        CopyRight Infratop.inc
      </div>
    </div>
  </div>
  
</footer>

</html>
